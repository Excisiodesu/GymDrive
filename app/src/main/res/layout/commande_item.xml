<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <RelativeLayout
            android:id="@+id/rl_product"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/iv_command_item_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_drink" />

                <TextView
                    android:id="@+id/ic_command_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@id/iv_command_item_icon"
                    android:layout_toRightOf="@id/iv_command_item_icon"
                    android:text="Product Name"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/ic_command_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_command_item_name"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toEndOf="@id/iv_command_item_icon"
                    android:layout_toRightOf="@id/iv_command_item_icon"
                    android:text="3,20â‚¬"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_item_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_item_info">

                <ImageView
                    android:id="@+id/btn_remove_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/btn_background"
                    android:src="@drawable/ic_remove" />

                <TextView
                    android:id="@+id/tw_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/btn_remove_one"
                    android:layout_toRightOf="@id/btn_remove_one"
                    android:text="3"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/btn_add_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toEndOf="@id/tw_item_count"
                    android:layout_toRightOf="@id/tw_item_count"
                    android:background="@drawable/btn_background"
                    android:src="@drawable/ic_add" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_toEndOf="@id/rl_product"
            android:layout_toRightOf="@id/rl_product"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_delete"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>